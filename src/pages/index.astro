---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import HeroPhone from '../components/HeroPhone.astro';
import GlobalLayouts from '../layouts/GlobalLayouts.astro'
import Testimonial from '../components/Testimonial.astro';
import AllServices from '../components/AllServices.astro';
import ShowOfferts from '../components/ShowOfferts.astro';
import ShowAllOfferts from '../components/ShowAllOfferts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<GlobalLayouts title="Phone Store">
		<HeroPhone />
		
		<ShowAllOfferts client:load  />
		<AllServices />
		<Testimonial />
		
	</GlobalLayouts>
	
</html>
